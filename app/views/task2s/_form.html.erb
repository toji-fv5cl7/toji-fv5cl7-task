<%= form_with(model: task2, local: true) do |form| %>
  <% if task2.errors.any? %>
    <div id="error_explanation">
    【エラー内容】
      <ul>
        <% task2.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :タイトル %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :内容 %>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit value="Update Task" %>
  </div>
<% end %>
